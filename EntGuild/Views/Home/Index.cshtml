@model EntGuild.Models.ProductGenreViewModel

<style>

    body {
        background-image: url('test_bg.JPG');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }

    .card-container {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    .card {
        width: 200px;
        margin: 20px;
        min-height: 200px;
        padding: 10px;
        color: black;
    }

    a   {
        text-decoration: none;
    }

    .card:hover {
        transform: scale(1.2);
        transition: all 0.1s;
    }

    .card-title {
        font-weight: bold;
    }

</style>

@{
    ViewData["Title"] = "Home Page";
}
<h2>Books Genre</h2>
<div class="card-container">
    
    @foreach (var product in Model.BooksProducts!)
    {
        <a asp-action="Details" asp-controller="Products" asp-route-id="@product.Id">
        <div class="card">
            <h3>@product.Name</h3>
            <hr/>
            <p>@product.Author</p>
        </div>
        </a>
    }
</div>

