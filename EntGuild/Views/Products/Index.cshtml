@model EntGuild.Models.ProductGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<style>
    .hidden {
        display: none;
    }
</style>
<!---->


<h1>Index</h1>
<!-- Admin Only: Start -->
<p>
    <a asp-action="Create">Create New</a>
</p>
<!-- Admin Only: End -->
<form asp-controller="Products" asp-action="Index" method="get">
    <p>
        Type:
        <select asp-for="ProductGenre" id="genre" asp-items="Model.Genres">
            <option value=""></option>
        </select>
        <p class="hidden" id="genretext">Genre:
        <select class="hidden" id="movie" asp-for="MovieGenre" asp-items="Model.MovieGenres">
            <option value=""></option>
        </select>
        <select class="hidden" id="book" asp-for="BookGenre" asp-items="Model.BookGenres">
            <option value=""></option>
        </select>
        <select class="hidden" id="game" asp-for="GameGenre" asp-items="Model.GameGenres">
            <option value=""></option>
        </select>
        </p>
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].subGenre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].Published)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].LastUpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products![0].LastUpdated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products!) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subGenre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Published)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdated)
            </td>
            <!-- Admin Only: Start -->
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            <!-- Admin Only: End -->
        </tr>
}
    </tbody>
</table>
@section scripts    {
<script type="text/javascript" language="javascript">
        document.getElementById("genre").onchange = function () {
            document.getElementById("genretext").className = "show";
            if (this[this.selectedIndex].value === "1") {
                document.getElementById("book").className = "show";
                document.getElementById("movie").value = "";
                document.getElementById("game").value = "";
            } else {
                document.getElementById("book").className = "hidden";
            } if (this[this.selectedIndex].value === "2") {
                document.getElementById("movie").className = "show";
                document.getElementById("book").value = "";
                document.getElementById("game").value = "";
            } else {
                document.getElementById("movie").className = "hidden";
            } if (this[this.selectedIndex].value === "3")  {
                document.getElementById("game").className = "show";
                document.getElementById("book").value = "";
                document.getElementById("movie").value = "";
            } else {
                document.getElementById("game").className = "hidden";
            }
        };

        $(document).ready(function ()   {
            document.getElementById("genre").value = "";
            document.getElementById("book").value = "";
            document.getElementById("movie").value = "";
            document.getElementById("game").value = "";
        });
</script>
}

